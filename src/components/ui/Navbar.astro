---
import GitHubDarkIcon from "@/icons/socials/GitHubDark.astro";
import GitHubLightIcon from "@/icons/socials/GitHubLight.astro";
import XDarkIcon from "@/icons/socials/XDark.astro";
import XLightIcon from "@/icons/socials/XLight.astro";
import ThemeToggle from "./ThemeToggle.astro";
---

<header class="w-full my-8 flex justify-between items-center gap-4 flex-row flex-nowrap">
  <a href="/">
    <h1 class="font-geist font-bold text-base text-neutral-900/90 dark:text-neutral-100/90 hover:opacity-90 transition">
      Interstellar Code
    </h1>
  </a>

  <ul class="flex flex-row justify-end items-center space-x-2">
    <li>
      <a
        href="https://x.com/chicho69_cesar"
        class="transition flex justify-center items-center p-2 hover:bg-neutral-300 rounded dark:hover:bg-neutral-700"
        target="_blank"
        rel="noopener noreferrer"
      >
        <XDarkIcon id="x-dark" class="hidden dark:block size-5 transition-all" />
        <XLightIcon id="x-light" class="block dark:hidden size-5 transition-all" />
      </a>
    </li>

    <li>
      <a
        href="https://github.com/chicho69-cesar"
        class="transition flex justify-center items-center p-2 hover:bg-neutral-300 rounded dark:hover:bg-neutral-700"
        target="_blank"
        rel="noopener;noreferrer"
      >
        <GitHubDarkIcon id="github-dark" class="hidden dark:block size-5 transition-all" />
        <GitHubLightIcon id="github-light" class="block dark:hidden size-5 transition-all" />
      </a>
    </li>
    
    <li>
      <ThemeToggle />
    </li>
  </ul>
</header>
